version: '3.8'
services:
  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    device_cgroup_rules:
      - 'c 226:* rmw'
    group_add:
      - video
    volumes:
      - ./llm/models:/root/.ollama/models
      - /dev/dri:/dev/dri
      # For MacBooks with AMD GPUs, uncomment the following line:
      # - /dev/kfd:/dev/kfd
    environment:
      - HSA_OVERRIDE_GFX_VERSION=10.3.0
      # Enable this for better performance on supported hardware
      # - HSA_ENABLE_SDMA=0
    ports:
      - "11434:11434"
    command: ["serve"]
